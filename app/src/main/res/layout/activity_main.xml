<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/monster_status_text"
        android:layout_width="match_parent"
        android:text="Hello Owner"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/monster_view"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:src="@drawable/monster_sad"
        android:padding="20dp"



        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="180dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal">

            <com.daasuu.ahp.AnimateHorizontalProgressBar
                android:id="@+id/food_progress_bar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                app:ahp_backgroundColor="@color/colorPrimaryDark"
                app:ahp_progressColor="@color/colorAccent" />

            <ImageButton

                android:id="@+id/btn_add_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="addFood"
                android:src="@android:drawable/ic_input_add"
                android:textColor="@color/colorAccent"
                android:paddingLeft="0dp"
                android:layout_marginTop="4dp"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <com.daasuu.ahp.AnimateHorizontalProgressBar
                android:id="@+id/love_progress_bar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                app:ahp_backgroundColor="@color/colorPrimaryDark"
                app:ahp_progressColor="@color/colorAccent" />

            <ImageButton

                android:id="@+id/btn_add_love"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:onClick="addLove"

                android:paddingLeft="0dp"
                android:src="@android:drawable/checkbox_on_background"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <com.daasuu.ahp.AnimateHorizontalProgressBar
                android:id="@+id/water_progress_bar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                app:ahp_backgroundColor="@color/colorPrimaryDark"
                app:ahp_progressColor="@color/colorAccent" />

            <ImageButton

                android:id="@+id/btn_add_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="4dp"
                android:onClick="addWater"
                android:src="@android:drawable/ic_input_add"
                android:textColor="@color/colorAccent"
                android:paddingLeft="0dp"
                android:textSize="20sp" />


        </LinearLayout>






    </LinearLayout>






</LinearLayout>