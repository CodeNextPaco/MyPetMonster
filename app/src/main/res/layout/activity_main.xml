<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/monster_status_text"
        android:layout_width="match_parent"
        android:text="Hello Owner"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/monster_view"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:src="@drawable/monster_sad"
        android:padding="20dp"



        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        >

        <ProgressBar
            android:id="@+id/food_progressBar"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"

            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="100"
            android:padding="20dp"
            android:progress="100" />

        <ProgressBar
            android:id="@+id/love_progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"

            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="100"
            android:padding="20dp"
            android:progress="100" />

        <ProgressBar
            android:id="@+id/water_progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"

            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="100"
            android:padding="20dp"
            android:progress="100" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <TextView


            android:text="Food"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            />
        <TextView


            android:text="Love"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            />
        <TextView

            android:text="Water"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">

        <ImageButton

            android:id="@+id/btn_add_food"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:onClick="addFood"
            android:src="@android:drawable/ic_input_add"
            android:text="Food"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <ImageButton

            android:id="@+id/btn_add_love"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:onClick="addLove"
            android:src="@android:drawable/ic_input_add"
            android:text="Food"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <ImageButton

            android:id="@+id/btn_add_water"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:onClick="addWater"
            android:src="@android:drawable/ic_input_add"
            android:text="Food"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

    </LinearLayout>




</LinearLayout>